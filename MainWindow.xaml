<Window x:Class="RSTinvestRefBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSTinvestRefBook"
        mc:Ignorable="d"
        Title="Справочник номенклатуры" Height="450" Width="800" Loaded="Window_Loaded">
    <TabControl x:Name="MainTabControl">
        <TabItem Header="Tab 1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="63*"/>
                    <ColumnDefinition Width="13*"/>
                    <ColumnDefinition Width="718*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="AcceptGrid" Margin="6,134,438,75" Grid.Column="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наименование" Width="200">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Количество" Width="80">
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid x:Name="ShipmentGrid" Margin="362,134,82,75" Grid.Column="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наименование" Width="200"/>
                        <DataGridTextColumn Header="Количество" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBox x:Name="AcceptTextBox" HorizontalAlignment="Left" Margin="6,60,0,0" TextWrapping="Wrap" Text="Введите HEX" VerticalAlignment="Top" Width="280" Height="40" Grid.Column="2"/>
                <TextBox x:Name="ShipmentTextBox" HorizontalAlignment="Left" Margin="362,60,0,0" TextWrapping="Wrap" Text="Введите HEX" VerticalAlignment="Top" Width="280" Height="40" Grid.Column="2"/>
                <Label Content="Прием" HorizontalAlignment="Left" Margin="112,17,0,0" VerticalAlignment="Top" Width="174" Grid.Column="2"/>
                <Label Content="Отгрузка" HorizontalAlignment="Left" Margin="458,17,0,0" VerticalAlignment="Top" Width="184" Grid.Column="2"/>
                <Button Content="Очистить" HorizontalAlignment="Left" Margin="6,381,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.455,0.47" Height="31" Width="93" Grid.Column="2"/>
            </Grid>
        </TabItem>
        <TabItem Header="Ref Book">
            <Grid>
                <DataGrid x:Name="RefBookGrid" Margin="10" AutoGenerateColumns="False" ItemsSource="{Binding Items}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                        <DataGridCheckBoxColumn Header="IsAcceptance" Binding="{Binding IsAcceptance}" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10">
                    <Button Content="Добавить запись" Click="AddRecord_Click" Margin="5" />
                    <Button Content="Удалить выбранные записи" Click="DeleteSelectedRecords_Click" Margin="5" />
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
